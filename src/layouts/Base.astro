---
import Navigation from "@components/structures/nav/nav.astro"
export interface Props {
  title: string;
  description: string;
}

const { description, title }: Props = Astro.props;
---

<html lang="en" class="font-body text-xl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courgette&family=Dancing+Script:wght@400&display=swap" rel="stylesheet">
  </head>
  <header>
    <Navigation />
  </header>
  <body>
    <slot />
  </body>
  </html>