---
import Hero from "@components/sections/hero/hero.astro"

export interface Props {
  title: string;
  description: string;
  hero?: any;
}

const { description, title, hero }: Props = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <header>
    <Hero bookshop:live {...hero} />
  </header>
  <body>
    <slot />
  </body>
  </html>